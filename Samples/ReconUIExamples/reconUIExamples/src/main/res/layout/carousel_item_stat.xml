<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/valuecontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <!-- add equal sized space on left so that title can be centered and view is still measurable -->
        <TextView
            android:id="@+id/unitspace"
            style="@style/recon_jet_text_secondary"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:textSize="20px" />
        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="34.5"
            android:textSize="64px" />
        <TextView
            android:id="@+id/unit"
            style="@style/recon_jet_text_secondary"
            android:layout_width="40px"
            android:layout_height="match_parent"
            android:gravity="top"
            android:paddingTop="10px"
            tools:text="km"
            android:textSize="20px"/>
    </LinearLayout>
    <TextView
        android:id="@+id/type"
        style="@style/recon_jet_text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valuecontainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-12dp"
        android:gravity="center"
        tools:text="DISTANCE"
        android:textSize="20px" />
</RelativeLayout>

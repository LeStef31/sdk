<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reconinstruments.metricsdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ReconTheme" >

        <uses-library android:name="com.reconinstruments.os" />

        <activity
            android:name="com.reconinstruments.metricsdemo.MainActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.reconinstruments.metricsdemo.AltitudeActivity"
            android:screenOrientation="landscape"/>
        <activity 
            android:name="com.reconinstruments.metricsdemo.SpeedActivity"
            android:screenOrientation="landscape"/>
        <activity 
            android:name="com.reconinstruments.metricsdemo.GradeActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.reconinstruments.metricsdemo.ExternalSensorActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>
